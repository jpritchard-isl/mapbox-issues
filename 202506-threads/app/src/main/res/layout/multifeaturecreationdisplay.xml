<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNumberOfRoadSegments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Number of Route Road Segments:" />

        <EditText
            android:id="@+id/editTextNumberOfRoadSegments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="2"
            android:inputType="numberSigned"
            android:text=""
            android:textSize="20px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNumberOfServicePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Number of Service Points:" />

        <EditText
            android:id="@+id/editTextNumberOfServicePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="2"
            android:inputType="numberSigned"
            android:text=""
            android:textSize="20px"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCreateMultiFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create features" />

</LinearLayout>